          iframe.pane#preview

        .toolbar
          .buttons
            #save.button(data-logged-in-only)
              span.icon.icon-save
              .tooltip Save
            #settings.panel-button.button.light
              span.icon-reorder
              .tooltip Settings
            #project.panel-button.button.light
              span.icon-edit
              .tooltip Project
            #publish.panel-button.button.light(data-logged-in-only)
              span.icon-truck
              .tooltip Publish
            #tutorial.panel-button.button.light
              span.icon-question
              .tooltip Tutorial
            #info.button.light
              span.icon-info-sign
          .panel-container
            #project-panel.panel
              h2 Project
              fieldset
                label Title
                input
                .button.save
              fieldset
                label Url
                input
                .button.save
              fieldset
                label Thumbnail
                .thumbnail-choices
                  img
                  img
                  img
            #settings-panel.panel
              h2 Settings
            #publish-panel.panel
              h2 Publish
            #tutorial-panel.panel
              h2 Tutorial
              ol
                li Step 1
                li Step 2
                li Step 3
            .close-button

    script(src="/bower_components/requirejs/require.js", data-main="main")
