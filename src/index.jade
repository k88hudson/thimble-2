        .block.pull-right
          .block: #persona.persona-button(data-logged-out-only)
            span.text Sign in
            span.tip
          .block: .button.light.big(data-logged-in-only)
            span.icon-user 
            span  username123 
            span.icon-caret-down

      #content
        .pane-container
          .pane
            #editor
              = '<h1>Hi</h1>\n'
