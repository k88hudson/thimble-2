  head
    title Test for t41
    link(rel="stylesheet", href="main.css")
    link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Inconsolata")
  body(data-loading)
    .loader
    .wrapper
      header
        .block
          .button.no-border.square: span.icon-reply

        .block#title Thimble / new project

        //- .block: .button.big.square: span.icon-save
